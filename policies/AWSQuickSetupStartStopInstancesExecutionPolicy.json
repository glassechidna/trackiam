{
  "Arn": "arn:aws:iam::aws:policy/AWSQuickSetupStartStopInstancesExecutionPolicy",
  "CreateDate": "2025-08-08T12:04:07Z",
  "DefaultVersionId": "v1",
  "IsAttachable": true,
  "Path": "/",
  "PolicyId": "ANPAZKAPJZG4GE4A2SUDO",
  "PolicyName": "AWSQuickSetupStartStopInstancesExecutionPolicy",
  "PolicyVersion": {
    "CreateDate": "2025-08-08T12:04:07Z",
    "Document": {
      "Statement": [
        {
          "Action": "iam:PassRole",
          "Condition": {
            "ArnLike": {
              "iam:AssociatedResourceARN": [
                "arn:aws:ssm:*:*:association/*",
                "arn:aws:ssm:*::document/AWSQuickSetupType-StartAndStopEC2Instances"
              ]
            },
            "StringEquals": {
              "iam:PassedToService": [
                "ssm.amazonaws.com"
              ]
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:iam::*:role/AWS-QuickSetup*"
          ]
        },
        {
          "Action": [
            "ec2:DescribeInstanceStatus",
            "ec2:DescribeInstances",
            "ec2:DescribeRegions",
            "ec2:DescribeTags"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ec2:StartInstances",
            "ec2:StopInstances"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:instance/*"
        },
        {
          "Action": [
            "ssm:GetCalendarState"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:ssm:*:*:document/AWSQuickSetup-ChangeCalendar*"
        },
        {
          "Action": [
            "ssm:StartAssociationsOnce",
            "ssm:StartAutomationExecution"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ssm:*:*:association/*",
            "arn:aws:ssm:*:*:automation-definition/AWSQuickSetupType-StartAndStopEC2Instances*",
            "arn:aws:ssm:*:*:automation-execution/*",
            "arn:aws:ssm:*:*:document/AWSQuickSetupType-StartAndStopEC2Instances"
          ]
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v1"
  },
  "UpdateDate": "2025-08-08T12:04:07Z"
}
