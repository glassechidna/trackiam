{
  "Arn": "arn:aws:iam::aws:policy/AWSEC2SqlHaInstancePolicy",
  "CreateDate": "2025-11-13T01:49:08Z",
  "DefaultVersionId": "v3",
  "IsAttachable": true,
  "Path": "/",
  "PolicyId": "ANPAZKAPJZG4C75EPIGXX",
  "PolicyName": "AWSEC2SqlHaInstancePolicy",
  "PolicyVersion": {
    "CreateDate": "2026-02-12T18:01:26Z",
    "Document": {
      "Statement": [
        {
          "Action": [
            "secretsmanager:GetSecretValue"
          ],
          "Condition": {
            "StringLike": {
              "aws:ResourceTag/AWSEc2SqlHa": "*"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:secretsmanager:*:*:secret:*"
        },
        {
          "Action": [
            "ssm:UpdateInstanceInformation"
          ],
          "Condition": {
            "StringLike": {
              "aws:ResourceTag/SqlHaMonitored": "true"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:instance/*"
        },
        {
          "Action": [
            "ec2messages:AcknowledgeMessage",
            "ec2messages:DeleteMessage",
            "ec2messages:FailMessage",
            "ec2messages:GetEndpoint",
            "ec2messages:GetMessages",
            "ec2messages:SendReply"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ssmmessages:CreateControlChannel",
            "ssmmessages:CreateDataChannel",
            "ssmmessages:OpenControlChannel",
            "ssmmessages:OpenDataChannel"
          ],
          "Effect": "Allow",
          "Resource": "*"
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v3"
  },
  "UpdateDate": "2026-02-12T18:01:26Z"
}
