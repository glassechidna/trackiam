{
  "Arn": "arn:aws:iam::aws:policy/AmazonECSInfrastructureRolePolicyForManagedInstances",
  "CreateDate": "2025-09-26T18:04:07Z",
  "DefaultVersionId": "v2",
  "IsAttachable": true,
  "Path": "/",
  "PolicyId": "ANPAZKAPJZG4KN4F4RUVF",
  "PolicyName": "AmazonECSInfrastructureRolePolicyForManagedInstances",
  "PolicyVersion": {
    "CreateDate": "2025-09-29T21:04:07Z",
    "Document": {
      "Statement": [
        {
          "Action": [
            "ec2:CreateFleet"
          ],
          "Condition": {
            "StringEquals": {
              "aws:RequestTag/AmazonECSManaged": "true"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:fleet/*",
            "arn:aws:ec2:*:*:image/*",
            "arn:aws:ec2:*:*:instance/*",
            "arn:aws:ec2:*:*:launch-template/*",
            "arn:aws:ec2:*:*:network-interface/*",
            "arn:aws:ec2:*:*:security-group/*",
            "arn:aws:ec2:*:*:subnet/*",
            "arn:aws:ec2:*:*:volume/*"
          ],
          "Sid": "ProvisionEC2InstancesForManagedInstances"
        },
        {
          "Action": [
            "ec2:CreateLaunchTemplate"
          ],
          "Condition": {
            "StringEquals": {
              "aws:RequestTag/AmazonECSManaged": "true"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:launch-template/*"
          ],
          "Sid": "CreateLaunchTemplateForManagedInstances"
        },
        {
          "Action": [
            "ec2:CreateLaunchTemplateVersion",
            "ec2:ModifyLaunchTemplate"
          ],
          "Condition": {
            "StringEquals": {
              "ec2:ManagedResourceOperator": "ecs.amazonaws.com"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:launch-template/*"
          ],
          "Sid": "CreateLaunchTemplateVersionsForManagedInstances"
        },
        {
          "Action": [
            "ec2:CreateTags"
          ],
          "Condition": {
            "StringEquals": {
              "ec2:CreateAction": [
                "CreateFleet",
                "CreateLaunchTemplate",
                "RunInstances"
              ]
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:fleet/*",
            "arn:aws:ec2:*:*:instance/*",
            "arn:aws:ec2:*:*:launch-template/*",
            "arn:aws:ec2:*:*:network-interface/*",
            "arn:aws:ec2:*:*:volume/*"
          ],
          "Sid": "TagOnCreateEC2ResourcesForManagedInstances"
        },
        {
          "Action": [
            "ec2:RunInstances"
          ],
          "Condition": {
            "StringEquals": {
              "aws:RequestTag/AmazonECSManaged": "true"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:instance/*",
            "arn:aws:ec2:*:*:network-interface/*",
            "arn:aws:ec2:*:*:volume/*"
          ],
          "Sid": "RunInstancesForManagedInstances"
        },
        {
          "Action": [
            "ec2:RunInstances"
          ],
          "Condition": {
            "StringEquals": {
              "ec2:ResourceTag/AmazonECSManaged": "true"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:launch-template/*"
          ],
          "Sid": "RunInstancesForECSManagedLaunchTemplates"
        },
        {
          "Action": [
            "iam:PassRole"
          ],
          "Condition": {
            "StringEquals": {
              "iam:PassedToService": "ec2.amazonaws.com"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:iam::*:role/ecsInstanceRole*"
          ],
          "Sid": "PassInstanceRoleForManagedInstances"
        },
        {
          "Action": [
            "ec2:DescribeAvailabilityZones",
            "ec2:DescribeInstanceTypeOfferings",
            "ec2:DescribeInstanceTypes",
            "ec2:DescribeInstances",
            "ec2:DescribeLaunchTemplates",
            "ec2:DescribeNetworkInterfaces",
            "ec2:DescribeSecurityGroups",
            "ec2:DescribeSubnets",
            "ec2:DescribeVpcs"
          ],
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "DescribeEC2ResourcesManagedByECS"
        },
        {
          "Action": [
            "ec2:RunInstances"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:security-group/*",
            "arn:aws:ec2:*:*:subnet/*",
            "arn:aws:ec2:*::image/*"
          ],
          "Sid": "RunInstancesForSupportingResources"
        },
        {
          "Action": [
            "iam:CreateServiceLinkedRole"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:iam::*:role/aws-service-role/spot.amazonaws.com/AWSServiceRoleForEC2Spot"
          ],
          "Sid": "CreateServiceLinkedRoleForEC2Spot"
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v2"
  },
  "UpdateDate": "2025-09-29T21:04:07Z"
}
