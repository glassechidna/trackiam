{
  "Arn": "arn:aws:iam::aws:policy/service-role/SageMakerStudioEMRContainersSystemNamespaceRolePolicy",
  "CreateDate": "2025-10-23T18:34:06Z",
  "DefaultVersionId": "v6",
  "IsAttachable": true,
  "Path": "/service-role/",
  "PolicyId": "ANPAZKAPJZG4OYAGQIVA2",
  "PolicyName": "SageMakerStudioEMRContainersSystemNamespaceRolePolicy",
  "PolicyVersion": {
    "CreateDate": "2026-02-12T18:01:48Z",
    "Document": {
      "Statement": [
        {
          "Action": [
            "sts:AssumeRole"
          ],
          "Condition": {
            "StringEquals": {
              "aws:ResourceTag/AmazonDataZoneProject": "${aws:PrincipalTag/AmazonDataZoneProject}"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:iam::*:role/datazone_usr_role_*"
          ],
          "Sid": "AssumeProjectRoles"
        },
        {
          "Action": [
            "sts:SetContext"
          ],
          "Condition": {
            "ForAllValues:ArnEquals": {
              "sts:RequestContextProviders": [
                "arn:aws:iam::aws:contextProvider/IdentityCenter"
              ]
            },
            "Null": {
              "sts:RequestContextProviders": "false"
            },
            "StringEquals": {
              "aws:ResourceTag/AmazonDataZoneProject": "${aws:PrincipalTag/AmazonDataZoneProject}"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:iam::*:role/datazone_usr_role_*"
          ],
          "Sid": "SetContextProjectRoles"
        },
        {
          "Action": [
            "sts:TagSession"
          ],
          "Condition": {
            "ForAllValues:StringEquals": {
              "aws:TagKeys": [
                "LakeFormationAuthorizedCaller"
              ]
            },
            "StringEquals": {
              "aws:RequestTag/LakeFormationAuthorizedCaller": "EMR on EKS Engine",
              "aws:ResourceTag/AmazonDataZoneProject": "${aws:PrincipalTag/AmazonDataZoneProject}"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:iam::*:role/datazone_usr_role_*"
          ],
          "Sid": "TagSessionProjectRoles"
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v6"
  },
  "UpdateDate": "2026-02-12T18:01:48Z"
}
