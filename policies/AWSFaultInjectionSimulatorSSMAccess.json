{
  "Arn": "arn:aws:iam::aws:policy/service-role/AWSFaultInjectionSimulatorSSMAccess",
  "CreateDate": "2022-10-26T15:33:44Z",
  "DefaultVersionId": "v8",
  "IsAttachable": true,
  "Path": "/service-role/",
  "PolicyId": "ANPAZKAPJZG4LYOCAYKDJ",
  "PolicyName": "AWSFaultInjectionSimulatorSSMAccess",
  "PolicyVersion": {
    "CreateDate": "2026-02-12T17:58:33Z",
    "Document": {
      "Statement": [
        {
          "Action": "iam:PassRole",
          "Condition": {
            "StringEquals": {
              "iam:PassedToService": "ssm.amazonaws.com"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:iam::*:role/*"
        },
        {
          "Action": "ssm:SendCommand",
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:instance/*",
            "arn:aws:ssm:*:*:document/*"
          ]
        },
        {
          "Action": [
            "ssm:CancelCommand",
            "ssm:ListCommands"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ssm:GetAutomationExecution",
            "ssm:StopAutomationExecution"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ssm:*:*:automation-execution/*"
          ]
        },
        {
          "Action": [
            "ssm:StartAutomationExecution"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ssm:*:*:automation-definition/*:*",
            "arn:aws:ssm:*:*:automation-execution/*",
            "arn:aws:ssm:*:*:document/*"
          ]
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v8"
  },
  "UpdateDate": "2026-02-12T17:58:33Z"
}
