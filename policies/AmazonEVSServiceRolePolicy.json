{
  "Arn": "arn:aws:iam::aws:policy/aws-service-role/AmazonEVSServiceRolePolicy",
  "CreateDate": "2025-05-16T23:37:06Z",
  "DefaultVersionId": "v3",
  "IsAttachable": true,
  "Path": "/aws-service-role/",
  "PolicyId": "ANPAZKAPJZG4HOHZBKDBX",
  "PolicyName": "AmazonEVSServiceRolePolicy",
  "PolicyVersion": {
    "CreateDate": "2025-08-14T16:04:06Z",
    "Document": {
      "Statement": [
        {
          "Action": [
            "cloudwatch:PutMetricData"
          ],
          "Condition": {
            "StringEquals": {
              "cloudwatch:namespace": [
                "AWS/EVS",
                "AWS/Usage"
              ]
            }
          },
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "CloudWatchPutMetricDataStatement"
        },
        {
          "Action": [
            "ec2:AssignIpv6Addresses",
            "ec2:CreateNetworkInterfacePermission",
            "ec2:DeleteNetworkInterface",
            "ec2:ModifyNetworkInterfaceAttribute"
          ],
          "Condition": {
            "Null": {
              "aws:ResourceTag/AmazonEVSManaged": "false"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:network-interface/*",
          "Sid": "ManageEniStatement"
        },
        {
          "Action": [
            "ec2:CreateNetworkInterface"
          ],
          "Condition": {
            "Null": {
              "aws:RequestTag/AmazonEVSManaged": "false"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:network-interface/*",
          "Sid": "CreateEniWithTagStatement"
        },
        {
          "Action": [
            "ec2:CreateTags"
          ],
          "Condition": {
            "Null": {
              "aws:RequestTag/AmazonEVSManaged": "false"
            },
            "StringEquals": {
              "ec2:CreateAction": [
                "CreateNetworkInterface"
              ]
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:network-interface/*",
          "Sid": "TagOnCreateNetworkInterface"
        },
        {
          "Action": [
            "ec2:DeleteSubnet"
          ],
          "Condition": {
            "Null": {
              "aws:ResourceTag/AmazonEVSManaged": "false"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:subnet/*",
          "Sid": "ManageSubnetStatement"
        },
        {
          "Action": [
            "ec2:DeleteVolume",
            "ec2:DetachVolume"
          ],
          "Condition": {
            "Null": {
              "aws:ResourceTag/AmazonEVSManaged": "false"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:volume/*"
          ],
          "Sid": "ManageVolumeStatement"
        },
        {
          "Action": [
            "ec2:DescribeInstanceAttribute",
            "ec2:ModifyInstanceAttribute",
            "ec2:TerminateInstances"
          ],
          "Condition": {
            "Null": {
              "aws:ResourceTag/AmazonEVSManaged": "false"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:instance/*",
          "Sid": "ManageInstanceStatement"
        },
        {
          "Action": [
            "secretsmanager:DeleteSecret"
          ],
          "Condition": {
            "Null": {
              "aws:ResourceTag/AmazonEVSManaged": "false"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:secretsmanager:*:*:secret:*"
          ],
          "Sid": "ManageSecretStatement"
        },
        {
          "Action": [
            "ec2:CreateNetworkInterface"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:security-group/*",
            "arn:aws:ec2:*:*:subnet/*"
          ],
          "Sid": "CreateEniInSubnetStatement"
        },
        {
          "Action": [
            "ec2:DescribeInstances",
            "ec2:DescribeVolumes"
          ],
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "DescribeInstanceAndVolumeStatement"
        },
        {
          "Action": [
            "ec2:DescribeNetworkInterfaces",
            "ec2:DescribeSubnets",
            "ec2:DescribeVpcs"
          ],
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "DescribeNetworkStatement"
        },
        {
          "Action": [
            "ec2:ModifyNetworkInterfaceAttribute"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:security-group/*",
          "Sid": "UpdateSecurityGroupStatement"
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v3"
  },
  "UpdateDate": "2025-08-14T16:04:06Z"
}
