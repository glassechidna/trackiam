  "IsAttachable": true,
  "Path": "/service-role/",
  "PolicyId": "ANPAZKAPJZG4O4WAPQIW3",
  "PolicyName": "AWSFaultInjectionSimulatorECSAccess",
  "PolicyVersion": {
    "CreateDate": "2026-02-12T18:02:55Z",
    "Document": {
      "Statement": [
        {
          "Action": "ec2:DescribeInstances",
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "DescribeInstances"
        },
        {
          "Action": "ec2:DescribeSubnets",
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "DescribeSubnets"
        },
        {
          "Action": "ecs:DescribeContainerInstances",
          "Effect": "Allow",
          "Resource": "arn:aws:ecs:*:*:container-instance/*/*",
          "Sid": "DescribeContainerInstances"
        },
        {
          "Action": "ssm:SendCommand",
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ssm:*:*:document/*",
            "arn:aws:ssm:*:*:managed-instance/*"
          ],
          "Sid": "SSMSend"
        },
        {
          "Action": [
            "ecs:DescribeClusters",
            "ecs:ListContainerInstances"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ecs:*:*:cluster/*"
          ],
          "Sid": "Clusters"
        },
        {
          "Action": [
            "ecs:DescribeTasks",
            "ecs:StopTask"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ecs:*:*:task/*/*"
          ],
          "Sid": "Tasks"
        },
        {
          "Action": [
            "ecs:ListTasks"
          ],
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "ListTasks"
        },
        {
          "Action": [
            "ecs:UpdateContainerInstancesState"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ecs:*:*:container-instance/*/*"
          ],
          "Sid": "ContainerInstances"
        },
        {
          "Action": [
            "ssm:CancelCommand",
            "ssm:ListCommands"
          ],
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "SSMList"
        },
        {
          "Action": [
            "tag:GetResources"
          ],
          "Effect": "Allow",
          "Resource": "*",
          "Sid": "TargetResolutionByTags"
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v9"
  },
