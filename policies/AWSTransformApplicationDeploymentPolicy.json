{
  "Arn": "arn:aws:iam::aws:policy/service-role/AWSTransformApplicationDeploymentPolicy",
  "CreateDate": "2025-08-28T06:34:07Z",
  "DefaultVersionId": "v1",
  "IsAttachable": true,
  "Path": "/service-role/",
  "PolicyId": "ANPAZKAPJZG4C2JTRAIVR",
  "PolicyName": "AWSTransformApplicationDeploymentPolicy",
  "PolicyVersion": {
    "CreateDate": "2025-08-28T06:34:07Z",
    "Document": {
      "Statement": [
        {
          "Action": [
            "cloudformation:CreateStack"
          ],
          "Condition": {
            "StringEquals": {
              "aws:RequestTag/CreatedBy": "AWSTransform",
              "aws:ResourceAccount": "${aws:PrincipalAccount}"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:cloudformation:*:*:stack/AWSTransform-Deploy-Infra-stack*"
        },
        {
          "Action": [
            "cloudformation:DeleteStack"
          ],
          "Condition": {
            "StringEquals": {
              "aws:ResourceAccount": "${aws:PrincipalAccount}",
              "aws:ResourceTag/CreatedBy": "AWSTransform"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:cloudformation:*:*:stack/AWSTransform-Deploy-Infra-stack*"
          ]
        },
        {
          "Action": [
            "cloudformation:DescribeStackEvents",
            "cloudformation:DescribeStacks"
          ],
          "Condition": {
            "StringEquals": {
              "aws:ResourceAccount": "${aws:PrincipalAccount}"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:cloudformation:*:*:stack/AWSTransform-Deploy-Infra-stack*"
          ]
        },
        {
          "Action": [
            "cloudformation:UpdateStack"
          ],
          "Condition": {
            "StringEquals": {
              "aws:RequestTag/CreatedBy": "AWSTransform",
              "aws:ResourceAccount": "${aws:PrincipalAccount}",
              "aws:ResourceTag/CreatedBy": "AWSTransform"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:cloudformation:*:*:stack/AWSTransform-Deploy-Infra-stack*"
        },
        {
          "Action": [
            "ec2:CreateTags",
            "ec2:DeleteTags"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "aws:CalledVia": "cloudformation.amazonaws.com"
            },
            "StringEquals": {
              "aws:ResourceAccount": "${aws:PrincipalAccount}"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:instance/*"
        },
        {
          "Action": [
            "ec2:CreateTags",
            "ec2:DeleteTags"
          ],
          "Condition": {
            "ForAnyValue:StringNotEquals": {
              "aws:TagKeys": [
                "ApplicationName",
                "CreatedBy",
                "TransformationType",
                "aws:cloudformation:logical-id",
                "aws:cloudformation:stack-id",
                "aws:cloudformation:stack-name"
              ]
            }
          },
          "Effect": "Deny",
          "Resource": "arn:aws:ec2:*:*:instance/*"
        },
        {
          "Action": [
            "ec2:ModifyInstanceAttribute",
            "ec2:StartInstances",
            "ec2:StopInstances",
            "ec2:TerminateInstances"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "aws:CalledVia": "cloudformation.amazonaws.com"
            },
            "StringEquals": {
              "aws:ResourceAccount": "${aws:PrincipalAccount}",
              "aws:ResourceTag/CreatedBy": "AWSTransform"
            }
          },
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*:*:instance/*"
        },
        {
          "Action": [
            "ec2:RunInstances"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "aws:CalledVia": "cloudformation.amazonaws.com"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*::image/*"
          ]
        },
        {
          "Action": [
            "ec2:RunInstances"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "aws:CalledVia": "cloudformation.amazonaws.com"
            },
            "StringEquals": {
              "aws:ResourceAccount": "${aws:PrincipalAccount}"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:instance/*",
            "arn:aws:ec2:*:*:network-interface/*",
            "arn:aws:ec2:*:*:volume/*"
          ]
        },
        {
          "Action": [
            "ec2:RunInstances"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "aws:CalledVia": "cloudformation.amazonaws.com"
            },
            "StringEquals": {
              "aws:ResourceAccount": "${aws:PrincipalAccount}",
              "aws:ResourceTag/CreatedFor": "AWSTransform"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:security-group/*",
            "arn:aws:ec2:*:*:subnet/*"
          ]
        },
        {
          "Action": [
            "iam:GetInstanceProfile",
            "iam:GetRole"
          ],
          "Condition": {
            "StringEquals": {
              "aws:ResourceAccount": "${aws:PrincipalAccount}",
              "aws:ResourceTag/CreatedFor": "AWSTransform"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:iam::*:instance-profile/AWSTransform-Deploy-EC2-Instance-Profile",
            "arn:aws:iam::*:role/AWSTransform-Deploy-EC2-Instance-Role"
          ]
        },
        {
          "Action": [
            "iam:PassRole"
          ],
          "Condition": {
            "StringEquals": {
              "aws:ResourceAccount": "${aws:PrincipalAccount}",
              "iam:PassedToService": "ec2.amazonaws.com"
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:iam::*:role/AWSTransform-Deploy-EC2-Instance-Role"
          ]
        },
        {
          "Action": [
            "ec2:DescribeImages",
            "ec2:DescribeInstances",
            "ec2:DescribeSecurityGroups",
            "ec2:DescribeSubnets",
            "ec2:DescribeVpcs"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ssm:GetParameters"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:ssm:*::parameter/aws/service/ami-amazon-linux-latest*"
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v1"
  },
  "UpdateDate": "2025-08-28T06:34:07Z"
}
